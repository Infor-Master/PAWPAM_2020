<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureImage.GalleryImageActivity">

    <Button
        android:id="@+id/button_Capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#AAA0A0"
        android:text="@string/capture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floatingGalleryback"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_choose_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="36dp"
        android:background="#AAA0A0"
        android:text="@string/Get_Invoice_from_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/invoiceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="69dp"
        android:contentDescription="@string/capture_invoice_description"
        app:layout_constraintBottom_toBottomOf="@+id/button_choose_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingGalleryback"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:srcCompat="@android:drawable/divider_horizontal_bright" />

    <Button
        android:id="@+id/button_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="42dp"
        android:background="#AAA0A0"
        android:text="@string/upload_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingGalleryback"
        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="237dp"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:tint="#040404"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/button_Capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test"
        tools:ignore="PrivateResource" />

</androidx.constraintlayout.widget.ConstraintLayout>