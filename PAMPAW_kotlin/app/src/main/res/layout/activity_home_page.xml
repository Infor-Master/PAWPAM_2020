<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomePageActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_go_profile">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:scrollbars="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_go_profile"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:background="#AAA0A0"
        android:backgroundTint="#6777D5"
        android:text="@string/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="45dp"
        android:background="#AAA0A0"
        android:backgroundTint="#6777D5"
        android:text="@string/logout_button"
        app:layout_constraintStart_toEndOf="@+id/buttonGoAddInvoice"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGoAddInvoice"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:background="#AAA0A0"
        android:backgroundTint="#6777D5"
        android:text="@string/go_add_invoice"
        app:layout_constraintStart_toEndOf="@+id/button_go_profile"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>